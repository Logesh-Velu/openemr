{% block buttons %}
    <div class="{{ button_container_class_list|default(['form-group'])|join(' ') }}" style="width: 100%;">

        <div class="w-100 mb-2">
            <button id="login-button" class="btn btn-primary w-100" type="submit" onclick="transmit_form(this)">
                {{ "Login"|xlt }}
            </button>
        </div>

        <div class="w-100 mb-2">
            <button id="loginotp" class="btn btn-primary w-100" type="button" onclick="loginotpform()">
                {{ "Login With OTP"|xlt }}
            </button>
        </div>

        <div class="w-100 mb-2 d-flex justify-content-center">
            {% if displayGoogleSignin %}
                <div class="g_id_signin" data-type="standard"></div>
            {% endif %}
        </div>

    </div>
{% endblock %}
